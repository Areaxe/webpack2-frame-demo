{
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "rules": {
    "no-var": "error",
    "array-bracket-spacing": [2, "always"],
    "camelcase": 2,
    "curly": 2,
    "brace-style": [2, "1tbs"],
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "space-infix-ops": 2,
    "computed-property-spacing": [2, "never"]
  }
}